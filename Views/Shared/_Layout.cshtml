@* Using explicit culture-based strings to ensure correct display while we stabilize resources *@
<!DOCTYPE html>
<html lang="@(System.Globalization.CultureInfo.CurrentUICulture?.TwoLetterISOLanguageName ?? "fr")" class="page-elegant" style="background: #ffffff !important; background-color: #ffffff !important;">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - L'Etoile Blanche</title>

    <!-- Bootstrap CSS (local) -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">

    <!-- Fichier CSS du layout (séparé du reste) -->
    <link rel="stylesheet" href="~/css/StyleLayout.css">
    <link rel="stylesheet" href="~/css/ElegantBackground.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700;900&family=Cormorant+Garamond:wght@300;400;600&display=swap" rel="stylesheet">
</head>
<body class="layout-global page-elegant" style="background: #ffffff !important; background-color: #ffffff !important; color: #000000 !important;">

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/" style="display: flex !important; align-items: center !important; gap: 15px !important; flex-direction: row !important; color: #ffffff !important;">
                    <svg width="50" height="50" viewBox="0 0 50 50" xmlns="http://www.w3.org/2000/svg" class="logo-img" style="display: inline-block !important; flex-shrink: 0 !important; visibility: visible !important; opacity: 1 !important; width: 50px !important; height: 50px !important; vertical-align: middle !important;">
                        <path d="M25 4 L30.15 17.35 L43.63 17.35 L32.58 25.15 L37.73 38.18 L25 30.3 L12.27 38.18 L17.42 25.15 L6.37 17.35 L19.85 17.35 Z" 
                              fill="#ffffff"/>
                    </svg>
                    <span class="brand-text" style="display: inline-block !important; vertical-align: middle !important; line-height: normal !important; color: #ffffff !important;">L'Etoile Blanche</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        @{
                            var twoLetterNav = System.Globalization.CultureInfo.CurrentUICulture?.TwoLetterISOLanguageName?.ToLower() ?? "fr";
                            var isNlNav = twoLetterNav == "nl";
                        }
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Menu", "Home")">Menu</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Home")#contact">Contact</a></li>
                    </ul>
                    <div class="d-flex align-items-center">
                        @{
                            var clientId = Context.Session.GetInt32("ClientId");
                            var clientName = Context.Session.GetString("ClientName") ?? string.Empty;
                            var clientLoggedIn = clientId.HasValue;
                            var clientLoginLabel = isNlNav ? "Inloggen" : "Se connecter";
                            var clientLogoutLabel = isNlNav ? "Uitloggen" : "Se déconnecter";
                            var clientReservationsLabel = isNlNav ? "Mijn reserveringen" : "Mes réservations";
                            var greetingLabel = isNlNav ? "Hallo" : "Bonjour";
                            var adminLoginLabel = isNlNav ? "Admin" : "Admin";
                            var clientFallback = isNlNav ? "Klant" : "Client";
                        }
                        <a href="/Client/PageReservationClient" class="btn btn-success mx-2">@(isNlNav ? "Reserveren" : "Réserver")</a>
                        @if (clientLoggedIn)
                        {
                            <div class="dropdown mx-2">
                                <a class="btn btn-outline-light dropdown-toggle" href="#" id="clientMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                    @($"{greetingLabel} {(string.IsNullOrWhiteSpace(clientName) ? clientFallback : clientName)}")
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="clientMenuButton">
                                    <li><a class="dropdown-item" href="/ClientAccount/Reservations">@clientReservationsLabel</a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li><button type="button" class="dropdown-item" id="clientLogoutBtn">@clientLogoutLabel</button></li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a href="#" class="btn btn-outline-light mx-2" id="btnClientLogin" data-bs-toggle="modal" data-bs-target="#clientLoginModal" role="button">@clientLoginLabel</a>
                        }
                        <div class="ms-3">
                            @{
                                var req = Context?.Request;
                                var path = req?.Path.Value ?? "/";
                                var query = req?.QueryString.Value ?? "";
                                var rawReturnUrl = string.IsNullOrEmpty(query) ? path : (path + query);
                                var returnUrlEncoded = System.Net.WebUtility.UrlEncode(rawReturnUrl);
                                var twoLetter = System.Globalization.CultureInfo.CurrentUICulture?.TwoLetterISOLanguageName?.ToLower() ?? "fr";
                                var isFr = twoLetter == "fr";
                            }
                            <div class="lang-toggle @(isFr ? "is-fr" : "is-nl")" role="group" aria-label="Language switch">
                                <a class="lang-option nl @(isFr ? "" : "active")" href="/Language/Set?culture=nl&uiCulture=nl&returnUrl=@returnUrlEncoded">NL</a>
                                <a class="lang-option fr @(isFr ? "active" : "")" href="/Language/Set?culture=fr-FR&uiCulture=fr-FR&returnUrl=@returnUrlEncoded">FR</a>
                                <span class="knob" aria-hidden="true"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="elegant-background">
        <div class="curved-shape shape-1"></div>
        <div class="curved-shape shape-2"></div>
        <div class="curved-shape shape-3"></div>
    </div>

    <div class="container mt-4 page-elegant" style="padding-top: 100px !important; max-width: 100% !important; width: 100% !important;">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer style="background-color: #000000 !important; color: #ffffff !important; padding: 30px 0 !important; margin-top: 50px !important; text-align: center !important; border-top: 1px solid rgba(212, 175, 55, 0.2) !important; position: relative !important; z-index: 100 !important; width: 100% !important; display: block !important; visibility: visible !important;">
        <div class="container">
            @{
                var isNlFooter = (System.Globalization.CultureInfo.CurrentUICulture?.TwoLetterISOLanguageName?.ToLower() ?? "fr") == "nl";
            }
            <div style="margin-bottom: 15px !important; display: block !important;">
                <a href="/Home/Terms" style="color: #ffffff !important; text-decoration: none !important; margin: 0 15px !important; font-family: 'Cormorant Garamond', serif !important; font-size: 1rem !important; display: inline-block !important; visibility: visible !important;">
                    @(isNlFooter ? "Algemene voorwaarden" : "Conditions générales")
                </a>
            </div>
            <div style="margin-bottom: 20px !important; display: flex !important; justify-content: center !important; align-items: center !important; gap: 20px !important;">
                <a href="https://www.facebook.com" target="_blank" rel="noopener noreferrer" style="display: inline-block !important; transition: transform 0.3s ease, opacity 0.3s ease !important;" onmouseover="this.style.transform='scale(1.1)'; this.style.opacity='0.8';" onmouseout="this.style.transform='scale(1)'; this.style.opacity='1';">
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="#ffffff" xmlns="http://www.w3.org/2000/svg" style="display: block !important;">
                        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                    </svg>
                </a>
                <a href="https://www.instagram.com" target="_blank" rel="noopener noreferrer" style="display: inline-block !important; transition: transform 0.3s ease, opacity 0.3s ease !important;" onmouseover="this.style.transform='scale(1.1)'; this.style.opacity='0.8';" onmouseout="this.style.transform='scale(1)'; this.style.opacity='1';">
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="#ffffff" xmlns="http://www.w3.org/2000/svg" style="display: block !important;">
                        <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                    </svg>
                </a>
                <a href="https://www.twitter.com" target="_blank" rel="noopener noreferrer" style="display: inline-block !important; transition: transform 0.3s ease, opacity 0.3s ease !important;" onmouseover="this.style.transform='scale(1.1)'; this.style.opacity='0.8';" onmouseout="this.style.transform='scale(1)'; this.style.opacity='1';">
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="#ffffff" xmlns="http://www.w3.org/2000/svg" style="display: block !important;">
                        <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                    </svg>
                </a>
            </div>
            <p style="margin: 0 !important; font-family: 'Cormorant Garamond', serif !important; font-size: 0.9rem !important; color: #ffffff !important; display: block !important; visibility: visible !important;">
                &copy; @DateTime.Now.Year L'Etoile Blanche. @(isNlFooter ? "Alle rechten voorbehouden." : "Tous droits réservés.")
            </p>
        </div>
    </footer>

    <!-- MODAL CLIENT -->
    <div id="clientLoginModal" class="modal fade" tabindex="-1" aria-labelledby="clientLoginModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    @{
                        var isNlClientModal = (System.Globalization.CultureInfo.CurrentUICulture?.TwoLetterISOLanguageName?.ToLower() ?? "fr") == "nl";
                        var clientFormRequired = isNlClientModal ? "Vul alle velden in." : "Veuillez remplir tous les champs.";
                        var clientFormInvalidCredentials = isNlClientModal ? "Ongeldig e-mailadres of wachtwoord." : "Email ou mot de passe incorrect.";
                        var clientFormGenericError = isNlClientModal ? "Er is een fout opgetreden. Probeer het opnieuw." : "Une erreur est survenue. Veuillez réessayer.";
                        var clientFormHelper = isNlClientModal ? "Gebruik hetzelfde telefoonnummer als tijdens de reservering." : "Utilisez le même numéro de téléphone que lors de la réservation.";
                    }
                    <h5 class="modal-title">@(isNlClientModal ? "Klantlogin" : "Connexion Client")</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="clientLoginError" class="alert alert-danger d-none"></div>
                    <form id="clientLoginForm"
                          data-error-required="@clientFormRequired"
                          data-error-credentials="@clientFormInvalidCredentials"
                          data-error-generic="@clientFormGenericError">
                        <div class="mb-3">
                            <label for="clientLoginEmail" class="form-label">@(isNlClientModal ? "E-mail" : "Email") :</label>
                            <input type="email" id="clientLoginEmail" name="email" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label for="clientLoginPassword" class="form-label">@(isNlClientModal ? "Wachtwoord" : "Mot de passe") :</label>
                            <input type="password" id="clientLoginPassword" name="password" class="form-control" required>
                            <div class="form-text">@clientFormHelper</div>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <button type="submit" class="btn btn-primary">@(isNlClientModal ? "Inloggen" : "Se connecter")</button>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@(isNlClientModal ? "Annuleren" : "Annuler")</button>
                        </div>
                    </form>
                    <div class="modal-divider"></div>
                    <div class="text-center">
                        <p class="modal-admin-label">@(isNlClientModal ? "Beheerder?" : "Administrateur?")</p>
                        <button type="button" class="btn btn-admin-link" id="btnAdminLoginFromModal" data-bs-dismiss="modal">@(isNlClientModal ? "Beheerderslogin" : "Connexion Administrateur")</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- MODAL ADMIN -->
    <div id="adminModal" class="modal fade" tabindex="-1" aria-labelledby="adminModalLabel" aria-hidden="true">
        <div id="adminModal1" class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    @{
                        var isNlModal = (System.Globalization.CultureInfo.CurrentUICulture?.TwoLetterISOLanguageName?.ToLower() ?? "fr") == "nl";
                    }
                    <h5 class="modal-title">@(isNlModal ? "Beheerderslogin" : "Connexion Administrateur")</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="adminLoginForm">
                        <div class="mb-3">
                            <label for="username" class="form-label">@(isNlModal ? "Gebruikersnaam" : "Nom d'utilisateur") :</label>
                            <input type="text" id="username" name="username" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">@(isNlModal ? "Wachtwoord" : "Mot de passe") :</label>
                            <input type="password" id="password" name="password" class="form-control" required>
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">@(isNlModal ? "Inloggen" : "Se connecter")</button>
                            <button type="button" class="btn btn-secondary" id="adminCancelBtn">@(isNlModal ? "Annuleren" : "Annuler")</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Overlay pour fond sombre -->
    <div id="modalOverlay" class="modal-overlay"></div>

    <!-- Bootstrap JS (local) -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Fichier JS du layout -->
    <script src="~/js/ScriptHome.js"></script>

    <!-- Cookie consent banner -->
    <div id="cookieBanner" class="cookie-banner">
        <div class="cookie-inner">
            @{
                var isNlCookie = (System.Globalization.CultureInfo.CurrentUICulture?.TwoLetterISOLanguageName?.ToLower() ?? "fr") == "nl";
            }
            <p>@(isNlCookie ? "We gebruiken noodzakelijke cookies voor de werking van de site en, met uw toestemming, cookies voor publieksmeting" : "Nous utilisons des cookies nécessaires au fonctionnement du site et, avec votre accord, des cookies de mesure d’audience") <a href="/Home/Terms">@(isNlCookie ? "Meer weten" : "En savoir plus")</a>.</p>
            <div class="cookie-actions">
                <button id="cookieDecline" class="btn btn-secondary btn-sm">@(isNlCookie ? "Weigeren" : "Refuser")</button>
                <button id="cookieAccept" class="btn btn-primary btn-sm">@(isNlCookie ? "Accepteren" : "Accepter")</button>
            </div>
        </div>
    </div>
    <script src="~/js/CookieConsent.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>
