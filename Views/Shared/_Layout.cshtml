@* Using explicit culture-based strings to ensure correct display while we stabilize resources *@
<!DOCTYPE html>
<html lang="@(System.Globalization.CultureInfo.CurrentUICulture?.TwoLetterISOLanguageName ?? "fr")">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Reserva</title>

    <!-- Bootstrap CSS (local) -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">

    <!-- Fichier CSS du layout (séparé du reste) -->
    <link rel="stylesheet" href="~/css/StyleLayout.css">
</head>
<body class="layout-global">

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">Reserva</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        @{
                            var twoLetterNav = System.Globalization.CultureInfo.CurrentUICulture?.TwoLetterISOLanguageName?.ToLower() ?? "fr";
                            var isNlNav = twoLetterNav == "nl";
                        }
                        <li class="nav-item"><a class="nav-link" href="/File/ViewPdf">Menu</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Home/Terms">@(isNlNav ? "Algemene voorwaarden" : "Conditions générales")</a></li>
                        <li class="nav-item"><a class="nav-link" href="#locations">@(isNlNav ? "Locaties" : "Emplacements")</a></li>
                        <li class="nav-item"><a class="nav-link" href="#contact">Contact</a></li>
                    </ul>
                    <div class="d-flex align-items-center">
                        <a href="/Client/PageReservationClient" class="btn btn-success mx-2">@(isNlNav ? "Reserveren" : "Réserver")</a>
                        <a href="#" class="btn btn-outline-light" id="btnAdminLogin">@(isNlNav ? "Inloggen" : "Se connecter")</a>
                        <div class="ms-3">
                            @{
                                var req = Context?.Request;
                                var path = req?.Path.Value ?? "/";
                                var query = req?.QueryString.Value ?? "";
                                var rawReturnUrl = string.IsNullOrEmpty(query) ? path : (path + query);
                                var returnUrlEncoded = System.Net.WebUtility.UrlEncode(rawReturnUrl);
                                var twoLetter = System.Globalization.CultureInfo.CurrentUICulture?.TwoLetterISOLanguageName?.ToLower() ?? "fr";
                                var isFr = twoLetter == "fr";
                            }
                            <div class="lang-toggle @(isFr ? "is-fr" : "is-nl")" role="group" aria-label="Language switch">
                                <a class="lang-option nl @(isFr ? "" : "active")" href="/Language/Set?culture=nl&uiCulture=nl&returnUrl=@returnUrlEncoded">NL</a>
                                <a class="lang-option fr @(isFr ? "active" : "")" href="/Language/Set?culture=fr-FR&uiCulture=fr-FR&returnUrl=@returnUrlEncoded">FR</a>
                                <span class="knob" aria-hidden="true"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- MODAL ADMIN -->
    <div id="adminModal" class="modal fade" tabindex="-1" aria-labelledby="adminModalLabel" aria-hidden="true">
        <div id="adminModal1" class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    @{
                        var isNlModal = (System.Globalization.CultureInfo.CurrentUICulture?.TwoLetterISOLanguageName?.ToLower() ?? "fr") == "nl";
                    }
                    <h5 class="modal-title">@(isNlModal ? "Beheerderslogin" : "Connexion Administrateur")</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="adminLoginForm">
                        <div class="mb-3">
                            <label for="username" class="form-label">@(isNlModal ? "Gebruikersnaam" : "Nom d'utilisateur") :</label>
                            <input type="text" id="username" name="username" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">@(isNlModal ? "Wachtwoord" : "Mot de passe") :</label>
                            <input type="password" id="password" name="password" class="form-control" required>
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">@(isNlModal ? "Inloggen" : "Se connecter")</button>
                            <button type="button" class="btn btn-secondary" id="adminCancelBtn">@(isNlModal ? "Annuleren" : "Annuler")</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Overlay pour fond sombre -->
    <div id="modalOverlay" class="modal-overlay"></div>

    <!-- Bootstrap JS (local) -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Fichier JS du layout -->
    <script src="~/js/ScriptHome.js"></script>

    <!-- Cookie consent banner -->
    <div id="cookieBanner" class="cookie-banner">
        <div class="cookie-inner">
            @{
                var isNlCookie = (System.Globalization.CultureInfo.CurrentUICulture?.TwoLetterISOLanguageName?.ToLower() ?? "fr") == "nl";
            }
            <p>@(isNlCookie ? "We gebruiken noodzakelijke cookies voor de werking van de site en, met uw toestemming, cookies voor publieksmeting" : "Nous utilisons des cookies nécessaires au fonctionnement du site et, avec votre accord, des cookies de mesure d’audience") <a href="/Home/Terms">@(isNlCookie ? "Meer weten" : "En savoir plus")</a>.</p>
            <div class="cookie-actions">
                <button id="cookieDecline" class="btn btn-secondary btn-sm">@(isNlCookie ? "Weigeren" : "Refuser")</button>
                <button id="cookieAccept" class="btn btn-primary btn-sm">@(isNlCookie ? "Accepteren" : "Accepter")</button>
            </div>
        </div>
    </div>
    <script src="~/js/CookieConsent.js"></script>

</body>
</html>
