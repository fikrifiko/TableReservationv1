@* Using explicit culture-based strings while resources are stabilized *@
<!DOCTYPE html>
<html lang="@(System.Globalization.CultureInfo.CurrentUICulture?.TwoLetterISOLanguageName ?? "fr")">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] Admin-Panel</title>

    <!-- Cache-control admin -->
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="0" />

    <!-- Bootstrap CSS (local) -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">

    <!-- Fichier CSS du layout (séparé du reste) -->
    <link rel="stylesheet" href="~/css/StyleLayout.css">
    <link rel="stylesheet" href="~/css/ElegantBackground.css">
    <link rel="stylesheet" href="~/css/StyleAdmin.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700;900&family=Cormorant+Garamond:wght@300;400;600&display=swap" rel="stylesheet">
</head>
<body class="layout-global admin-layout">
    <div class="elegant-background">
        <div class="curved-shape shape-1"></div>
        <div class="curved-shape shape-2"></div>
        <div class="curved-shape shape-3"></div>
    </div>

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" href="/AdminView/Dashboard">Dashboard</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        @{
                            var isNlAdmin = (System.Globalization.CultureInfo.CurrentUICulture?.TwoLetterISOLanguageName?.ToLower() ?? "fr") == "nl";
                        }
                        <li class="nav-item"><a class="nav-link" href="/AdminView/Reservations">@(isNlAdmin ? "Onze reserveringen" : "Nos Réservations")</a></li>
                        <li class="nav-item"><a class="nav-link" href="/AdminView/Clients">@(isNlAdmin ? "Onze klanten" : "Nos clients")</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">@(isNlAdmin ? "Advertentie" : "Pub")</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">@(isNlAdmin ? "Optie" : "Option")</a></li>
                    </ul>
                    <div class="d-flex">
                            <button type="submit" id="btnAdminLogout" class="btn btn-danger">@(isNlAdmin ? "Uitloggen" : "Déconnexion")</button>
                            <div class="ms-3">
                                @{
                                    var req = Context?.Request;
                                    var path = req?.Path.Value ?? "/";
                                    var query = req?.QueryString.Value ?? "";
                                    var rawReturnUrl = string.IsNullOrEmpty(query) ? path : (path + query);
                                    var returnUrlEncoded = System.Net.WebUtility.UrlEncode(rawReturnUrl);
                                    var twoLetter = System.Globalization.CultureInfo.CurrentUICulture?.TwoLetterISOLanguageName?.ToLower() ?? "fr";
                                    var isFr = twoLetter == "fr";
                                }
                                <div class="lang-toggle @(isFr ? "is-fr" : "is-nl")" role="group" aria-label="Language switch">
                                    <a class="lang-option nl @(isFr ? "" : "active")" href="/Language/Set?culture=nl&uiCulture=nl&returnUrl=@returnUrlEncoded">NL</a>
                                    <a class="lang-option fr @(isFr ? "active" : "")" href="/Language/Set?culture=fr-FR&uiCulture=fr-FR&returnUrl=@returnUrlEncoded">FR</a>
                                    <span class="knob" aria-hidden="true"></span>
                                </div>
                            </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4 admin-content page-elegant">
        @RenderBody()
    </div>

    <!-- Bootstrap JS (local) -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/ScriptAdminLogOut.js"></script>
    <script src="/js/AdminPageShowCheck.js"></script>

</body>
</html>




