@{
    Layout = "_Layout";
    ViewData["Title"] = "Menu";
}
<link rel="stylesheet" href="~/css/ElegantBackground.css">
<link rel="stylesheet" href="~/css/StyleMenu.css">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700;900&family=Cormorant+Garamond:wght@300;400;600&display=swap" rel="stylesheet">

<div class="elegant-background">
    <div class="curved-shape shape-1"></div>
    <div class="curved-shape shape-2"></div>
    <div class="curved-shape shape-3"></div>
</div>

<div class="menu-page page-elegant">
    <div class="menu-container">
        <div class="menu-header">
            <h1 class="menu-title">Restaurant Reserva</h1>
            <div class="menu-divider"></div>
            <p class="menu-subtitle">Cuisine Belge Authentique</p>
        </div>

        <div class="menu-sections">
            <section class="menu-section">
                <h2 class="section-title">
                    <span class="section-icon">🍽️</span>
                    Entrées
                </h2>
                <div class="menu-items">
                    <div class="menu-item">
                        <div class="item-header">
                            <h3 class="item-name">Croquettes de Crevettes Grises</h3>
                            <span class="item-price">18€</span>
                        </div>
                        <p class="item-description">Crevettes grises du Nord, béchamel crémeuse, panure dorée, sauce tartare maison</p>
                    </div>
                    <div class="menu-item">
                        <div class="item-header">
                            <h3 class="item-name">Salade Liégeoise</h3>
                            <span class="item-price">16€</span>
                        </div>
                        <p class="item-description">Haricots verts, pommes de terre, lardons fumés, vinaigrette à la moutarde de Meaux</p>
                    </div>
                    <div class="menu-item">
                        <div class="item-header">
                            <h3 class="item-name">Jambon d'Ardennes</h3>
                            <span class="item-price">14€</span>
                        </div>
                        <p class="item-description">Tranches fines de jambon fumé des Ardennes, beurre de ferme, pain artisanal</p>
                    </div>
                    <div class="menu-item">
                        <div class="item-header">
                            <h3 class="item-name">Soupe à la Bière</h3>
                            <span class="item-price">12€</span>
                        </div>
                        <p class="item-description">Bière brune belge, fromage, croûtons, crème fraîche</p>
                    </div>
                </div>
            </section>

            <section class="menu-section">
                <h2 class="section-title">
                    <span class="section-icon">🥩</span>
                    Plats Principaux
                </h2>
                <div class="menu-items">
                    <div class="menu-item featured">
                        <div class="item-header">
                            <h3 class="item-name">Carbonnade Flamande</h3>
                            <span class="item-price">24€</span>
                        </div>
                        <p class="item-description">Bœuf mijoté à la bière brune, oignons caramélisés, pain d'épices, frites maison</p>
                        <span class="featured-badge">Spécialité</span>
                    </div>
                    <div class="menu-item">
                        <div class="item-header">
                            <h3 class="item-name">Waterzooi de Poulet</h3>
                            <span class="item-price">22€</span>
                        </div>
                        <p class="item-description">Poulet fermier, légumes du marché, bouillon crémeux, herbes fraîches</p>
                    </div>
                    <div class="menu-item">
                        <div class="item-header">
                            <h3 class="item-name">Moules-Frites</h3>
                            <span class="item-price">26€</span>
                        </div>
                        <p class="item-description">Moules de Zélande, vin blanc, échalotes, céleri, frites belges, mayonnaise maison</p>
                    </div>
                    <div class="menu-item">
                        <div class="item-header">
                            <h3 class="item-name">Chicons au Gratin</h3>
                            <span class="item-price">20€</span>
                        </div>
                        <p class="item-description">Endives braisées, jambon, béchamel, fromage gratiné, purée de pommes de terre</p>
                    </div>
                    <div class="menu-item">
                        <div class="item-header">
                            <h3 class="item-name">Lapin à la Bière</h3>
                            <span class="item-price">23€</span>
                        </div>
                        <p class="item-description">Cuisses de lapin, bière brune, pruneaux, pommes de terre nouvelles</p>
                    </div>
                    <div class="menu-item">
                        <div class="item-header">
                            <h3 class="item-name">Boulettes à la Liégeoise</h3>
                            <span class="item-price">21€</span>
                        </div>
                        <p class="item-description">Boulettes de viande, sirop de Liège, frites, compote de pommes</p>
                    </div>
                </div>
            </section>

            <section class="menu-section">
                <h2 class="section-title">
                    <span class="section-icon">🍰</span>
                    Desserts
                </h2>
                <div class="menu-items">
                    <div class="menu-item">
                        <div class="item-header">
                            <h3 class="item-name">Gaufres de Liège</h3>
                            <span class="item-price">8€</span>
                        </div>
                        <p class="item-description">Gaufres chaudes, sucre perlé, chantilly, sirop de Liège</p>
                    </div>
                    <div class="menu-item">
                        <div class="item-header">
                            <h3 class="item-name">Tarte au Riz</h3>
                            <span class="item-price">9€</span>
                        </div>
                        <p class="item-description">Riz au lait, pâte brisée, cannelle, sucre cassonade</p>
                    </div>
                    <div class="menu-item">
                        <div class="item-header">
                            <h3 class="item-name">Dame Blanche</h3>
                            <span class="item-price">10€</span>
                        </div>
                        <p class="item-description">Glace vanille, chocolat chaud belge, chantilly, amandes effilées</p>
                    </div>
                    <div class="menu-item">
                        <div class="item-header">
                            <h3 class="item-name">Mousse au Speculoos</h3>
                            <span class="item-price">9€</span>
                        </div>
                        <p class="item-description">Mousse légère, biscuits speculoos, caramel au beurre salé</p>
                    </div>
                </div>
            </section>

            <section class="menu-section">
                <h2 class="section-title">
                    <span class="section-icon">🍺</span>
                    Boissons
                </h2>
                <div class="menu-items">
                    <div class="menu-item">
                        <div class="item-header">
                            <h3 class="item-name">Sélection de Bières Belges</h3>
                            <span class="item-price">5-12€</span>
                        </div>
                        <p class="item-description">Trappistes, abbayes, lambics, bières de spécialité</p>
                    </div>
                    <div class="menu-item">
                        <div class="item-header">
                            <h3 class="item-name">Vins de la Carte</h3>
                            <span class="item-price">6-15€</span>
                        </div>
                        <p class="item-description">Sélection de vins français, italiens et belges</p>
                    </div>
                </div>
            </section>
        </div>

        <div class="menu-footer">
            <p class="footer-note">Tous nos plats sont préparés avec des produits frais et locaux</p>
            <p class="footer-note">Réservation recommandée</p>
        </div>
    </div>
</div>
