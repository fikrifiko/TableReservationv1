@{
    ViewData["Title"] = "Accueil";
}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/StyleHomeIndex.css?v=@DateTime.Now.Ticks">
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Expires" content="0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700;900&family=Cormorant+Garamond:wght@300;400;600&display=swap" rel="stylesheet">
</head>
<body class="page-accueil">
    <div class="elegant-background">
        <div class="curved-shape shape-1"></div>
        <div class="curved-shape shape-2"></div>
        <div class="curved-shape shape-3"></div>
    </div>
    @if (Context.Request.Query["message"] == "deconnected")
    {
        <div class="alert alert-info text-center" role="alert" style="margin: 10px 20px;">
            Vous avez été déconnecté.
        </div>
    }

    <section class="hero">
        <div class="row justify-content-center align-items-center text-center" style="margin: 0; width: 100%;">
            <div class="col-12 col-md-10 col-lg-8" style="padding: 0;">
                <div class="hero-content">
                    <h1 class="restaurant-title">
                        <span class="restaurant-name">Restaurant</span>
                        <span class="restaurant-brand">L'Etoile Blanche</span>
                    </h1>
                    <div class="title-divider"></div>
                    <p class="restaurant-tagline">Une expérience gastronomique unique</p>
                    <div class="hero-buttons">
                        <a href="/Client/PageReservationClient" class="btn btn-outline-light btn-menu">Réserver une table</a>
                        <a href="#menu-section" class="btn btn-outline-light btn-menu">Notre menu</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Section Menu -->
    <section id="menu-section" class="content-section">
        <div class="section-container">
            <h2 class="section-title">Notre Menu</h2>
            <p class="section-description">Découvrez notre carte inspirée de la cuisine belge authentique</p>
            <a href="/Home/Menu" class="btn-section">Voir le menu complet</a>
        </div>
    </section>

    <!-- Section Contact -->
    <section id="contact" class="content-section">
        <div class="section-container">
            <h2 class="section-title">Contact</h2>
            <p class="section-description">N'hésitez pas à nous contacter pour toute question ou réservation</p>
            <div class="contact-wrapper">
                <div class="contact-info">
                    <div class="contact-item">
                        <div class="contact-icon">📍</div>
                        <strong>Adresse</strong>
                        <p>12 Rue Exemple<br>75000 Paris, France</p>
                        <span class="contact-note">Métro: Ligne 1, 4, 7</span>
                    </div>
                    <div class="contact-item">
                        <div class="contact-icon">🕐</div>
                        <strong>Horaires</strong>
                        <p>Lundi - Dimanche<br>12h00 - 23h00</p>
                        <span class="contact-note">Service continu</span>
                    </div>
                    <div class="contact-item">
                        <div class="contact-icon">📞</div>
                        <strong>Téléphone</strong>
                        <p><a href="tel:+33123456789">+33 1 23 45 67 89</a></p>
                        <span class="contact-note">Lun-Dim, 12h-23h</span>
                    </div>
                    <div class="contact-item">
                        <div class="contact-icon">✉️</div>
                        <strong>Email</strong>
                        <p><a href="mailto:contact@etoileblanche.example">contact@etoileblanche.example</a></p>
                        <span class="contact-note">Réponse sous 24h</span>
                    </div>
                </div>
                <div class="contact-map-container">
                    <div class="map-wrapper">
                        <iframe 
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2624.9916256937604!2d2.292292615674414!3d48.85837007928746!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e66e2964e34e2d%3A0x8ddca9ee380ef7e0!2sTour%20Eiffel!5e0!3m2!1sfr!2sfr!4v1704123456789!5m2!1sfr!2sfr" 
                            width="100%" 
                            height="100%" 
                            style="border:0; border-radius: 8px;" 
                            allowfullscreen="" 
                            loading="lazy" 
                            referrerpolicy="no-referrer-when-downgrade"
                            class="elegant-map">
                        </iframe>
                    </div>
                    <div class="map-overlay">
                        <a href="https://www.google.com/maps/search/12+Rue+Exemple,+75000+Paris,+France" target="_blank" class="map-link">
                            <span>Voir sur Google Maps</span>
                            <span>→</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Section Témoignages avec Flammes -->
    <section id="testimonials" class="content-section">
        <div class="section-container">
            <h2 class="section-title">Ce que nos clients disent</h2>
            <p class="section-description">Découvrez les expériences de nos convives</p>
            <div class="flames-container">
                <div class="flame-wrapper">
                    <div class="flame">
                        <div class="flame-heads">
                            <div class="flame-face face-1">😊</div>
                            <div class="flame-face face-2">😄</div>
                            <div class="flame-face face-3">😍</div>
                        </div>
                        <div class="flame-content">
                            <p class="testimonial-text">"Une expérience gastronomique exceptionnelle ! Les plats sont délicieux et l'ambiance est chaleureuse."</p>
                            <p class="testimonial-author">- Marie D.</p>
                        </div>
                    </div>
                </div>
                <div class="flame-wrapper">
                    <div class="flame">
                        <div class="flame-heads">
                            <div class="flame-face face-1">🤩</div>
                            <div class="flame-face face-2">😋</div>
                            <div class="flame-face face-3">🥰</div>
                        </div>
                        <div class="flame-content">
                            <p class="testimonial-text">"Le meilleur restaurant belge de la ville ! Les carbonnades flamandes sont à tomber."</p>
                            <p class="testimonial-author">- Jean-Pierre L.</p>
                        </div>
                    </div>
                </div>
                <div class="flame-wrapper">
                    <div class="flame">
                        <div class="flame-heads">
                            <div class="flame-face face-1">😎</div>
                            <div class="flame-face face-2">😃</div>
                            <div class="flame-face face-3">😊</div>
                        </div>
                        <div class="flame-content">
                            <p class="testimonial-text">"Service impeccable et cuisine authentique. Nous reviendrons certainement !"</p>
                            <p class="testimonial-author">- Sophie M.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Section Conditions Générales -->
    <section id="terms-section" class="content-section">
        <div class="section-container">
            <h2 class="section-title">Conditions Générales</h2>
            <p class="section-description">Consultez nos conditions d'utilisation et de vente</p>
            <a href="/Home/Terms" class="btn-section">Lire les conditions</a>
        </div>
    </section>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Smooth scroll pour les ancres
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const href = this.getAttribute('href');
                // Ignorer les liens avec juste "#" ou "#" vide
                if (href && href.length > 1) {
                    const target = document.querySelector(href);
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                }
            });
        });
    </script>
</body>
</html>
