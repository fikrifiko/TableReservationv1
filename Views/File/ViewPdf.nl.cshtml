@{
    Layout = "_Layout";
}

@model string

@if (!string.IsNullOrEmpty(Model))
{
    <div class="lang-bar text-center mb-3">
        <a class="btn btn-primary m-1" href="/File/ViewPdf?lang=fr">Frans</a>
        <a class="btn btn-success m-1" href="/File/ViewPdf?lang=en">Engels</a>
        <a class="btn btn-warning m-1" href="/File/ViewPdf?lang=nl">Nederlands</a>
    </div>

    <div class="pdf-title">
        <h2>MENU</h2>
    </div>
    <iframe id="pdfFrame" src="@Model" width="100%" height="100%"></iframe>
}
else
{
    <p>Geen PDF-bestand gevonden.</p>
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

<style>
    html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        overflow: hidden;
    }
    .pdf-title {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 3vh;
        text-align: center;
        background: linear-gradient(45deg, #ff7e5f, #feb47b);
        color: white;
        font-size: 28px;
        font-weight: bold;
        border-radius: 10px;
        box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.3);
        margin: 20px auto;
        width: 30%;
        padding: 15px;
    }
    iframe {
        width: 100%;
        height: 80vh;
        border: none;
        display: block;
    }
    h2 {
        text-align: center;
    }
    .lang-bar {
        margin-top: 5cm;
    }
    </style>




