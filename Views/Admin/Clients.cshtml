@model Table_Reservation.Models.ViewModels.AdminClientsViewModel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var searchPlaceholder = Model.IsDutch ? "Zoek op naam, e-mail of telefoon..." : "Rechercher par nom, email ou téléphone...";
    var title = Model.IsDutch ? "Onze klanten" : "Nos clients";
    var totalLabel = Model.IsDutch ? "Totaal" : "Total";
    var reservationsLabel = Model.IsDutch ? "Reserveringen" : "Réservations";
    var createdAtLabel = Model.IsDutch ? "Aangemaakt op" : "Créé le";
    var updatedAtLabel = Model.IsDutch ? "Bijgewerkt op" : "Mis à jour le";
    var noResultLabel = Model.IsDutch ? "Geen klanten gevonden" : "Aucun client trouvé";
    var resetLabel = Model.IsDutch ? "Reset" : "Réinitialiser";
    var searchLabel = Model.IsDutch ? "Zoeken" : "Rechercher";
}

<style>
    .clients-wrapper {
        background-color: #0f1219;
        margin-top: 32px;
        border-radius: 16px;
        padding: 24px;
        box-shadow: 0 20px 45px rgba(0, 0, 0, 0.45);
        color: #f5f7fa;
    }

    .clients-header {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }

    .clients-header h1 {
        font-size: 1.8rem;
        margin: 0;
        font-weight: 600;
    }

    .search-bar {
        position: relative;
        max-width: 420px;
    }

    .search-bar input {
        background: rgba(255, 255, 255, 0.08);
        border: 1px solid rgba(255, 255, 255, 0.15);
        border-radius: 999px;
        padding: 12px 48px 12px 48px;
        width: 100%;
        color: #f5f7fa;
    }

    .search-bar input::placeholder {
        color: rgba(245, 247, 250, 0.6);
    }

    .search-bar .search-icon {
        position: absolute;
        left: 18px;
        top: 50%;
        transform: translateY(-50%);
        color: rgba(245, 247, 250, 0.6);
    }

    .search-actions {
        display: flex;
        gap: 12px;
        margin-top: 12px;
    }

    .search-actions button {
        border-radius: 999px;
        border-width: 0;
        font-weight: 600;
    }

    .clients-grid {
        margin-top: 32px;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 18px;
    }

    .client-card {
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.08), rgba(255, 255, 255, 0.04));
        border: 1px solid rgba(255, 255, 255, 0.12);
        border-radius: 14px;
        padding: 18px;
        display: flex;
        flex-direction: column;
        gap: 10px;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .client-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 16px 32px rgba(15, 18, 25, 0.35);
    }

    .client-card h2 {
        margin: 0;
        font-size: 1.2rem;
        font-weight: 600;
        color: #ffffff;
    }

    .client-meta {
        color: rgba(245, 247, 250, 0.8);
        font-size: 0.9rem;
    }

    .badge-pill {
        display: inline-block;
        border-radius: 999px;
        padding: 6px 16px;
        font-size: 0.85rem;
        font-weight: 600;
        background: rgba(40, 167, 69, 0.16);
        color: #76f39c;
        border: 1px solid rgba(118, 243, 156, 0.3);
    }

    .clients-empty {
        margin-top: 32px;
        text-align: center;
        color: rgba(245, 247, 250, 0.6);
        font-size: 1rem;
        padding: 24px;
        border-radius: 14px;
        background: rgba(255, 255, 255, 0.04);
    }
</style>

<div class="clients-wrapper">
    <div class="clients-header">
        <h1>@title</h1>
        <form method="get" asp-action="Clients" class="search-bar">
            <span class="search-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-4.35-4.35M17 10.5a6.5 6.5 0 11-13 0 6.5 6.5 0 0113 0z" />
                </svg>
            </span>
            <input type="text" name="q" value="@Model.Query" placeholder="@searchPlaceholder" />
            <div class="search-actions">
                <button type="submit" class="btn btn-outline-light btn-sm">@searchLabel</button>
                <a class="btn btn-outline-light btn-sm" href="@Url.Action("Clients")">@resetLabel</a>
            </div>
        </form>
    </div>

    @if (Model.Clients.Count == 0)
    {
        <div class="clients-empty">@noResultLabel</div>
    }
    else
    {
        <div class="clients-grid">
            @foreach (var client in Model.Clients)
            {
                <div class="client-card">
                    <h2>@client.Name</h2>
                    <div class="client-meta">
                        <div>@client.Email</div>
                        <div>@client.Phone</div>
                    </div>
                    <div class="badge-pill">
                        @reservationsLabel : @client.ReservationsCount
                    </div>
                    <div class="client-meta">
                        <div>@createdAtLabel : @client.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                        @if (client.UpdatedAt.HasValue)
                        {
                            <div>@updatedAtLabel : @client.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")</div>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>








