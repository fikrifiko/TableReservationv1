@{
    var culture = System.Globalization.CultureInfo.CurrentUICulture?.TwoLetterISOLanguageName?.ToLower() ?? "fr";
    var isNl = culture == "nl";
    ViewData["Title"] = isNl ? "Tafelindeling" : "Disposition des Tables";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="admin-content-wrapper">
    <h1>@(isNl ? "Disposition du Restaurant" : "Disposition du Restaurant")</h1>

    <div class="mb-4">
        <label for="canvasSizeSelect" class="form-label">@(isNl ? "Restaurantgrootte:" : "Taille du restaurant:")</label>
        <select id="canvasSizeSelect" class="form-select w-auto d-inline-block">
            <option value="1">@(isNl ? "Standaard" : "Taille par défaut")</option>
            <option value="1.50">@(isNl ? "Middelgroot" : "Moyen")</option>
            <option value="1.90">@(isNl ? "Groot" : "Large")</option>
        </select>
        <button id="saveCanvasButton" class="btn btn-success">@(isNl ? "Indeling opslaan" : "Enregistrer la disposition")</button>
    </div>

    <div class="canvas-wrapper-admin">
        <canvas id="roomCanvas" width="800" height="600"></canvas>
    </div>

    <div class="controls mt-4">
        <div>
            <br />
            <label for="seatsInput" class="me-2">@((isNl ? "Aantal personen" : "Nombre de personnes") + " :")</label>
            <input type="number" id="seatsInput" min="2" max="10" step="2" value="2">
        </div>

        <div class="mt-3">
            <button id="addTableButton" class="btn btn-primary">@(isNl ? "Tafel toevoegen" : "Ajouter une table")</button>
            <button id="rotateTableButton" class="btn btn-secondary">@(isNl ? "Draaien" : "Faire pivoter")</button>
            <button id="deleteTableButton" class="btn btn-danger">@(isNl ? "Verwijderen" : "Supprimer")</button>
        </div>
        <div class="mt-3">
            <button id="modifyTableNameButton" class="btn btn-warning">@(isNl ? "Naam bewerken" : "Modifier le nom")</button>
            <button id="saveButton" class="btn btn-success">@(isNl ? "Opslaan in DB" : "Enregistrer dans la DB")</button>
            <a href="/AdminView/Upload" class="btn btn-secondary">@(isNl ? "Menu beheren" : "Gérer Menu")</a>
        </div>
    </div>
</div>

<!-- Modal pour modifier le nom de la table -->
<div class="modal fade" id="tableNameModal" tabindex="-1" aria-labelledby="tableNameModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="tableNameModalLabel">@(isNl ? "Tafelnaam wijzigen" : "Modifier le nom de la table")</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="text" id="tableNameInput" class="form-control" placeholder="@(isNl ? "Nieuwe naam" : "Entrez le nouveau nom")">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@(isNl ? "Annuleren" : "Annuler")</button>
                <button type="button" id="saveTableNameButton" class="btn btn-primary">@(isNl ? "Opslaan" : "Sauver")</button>
            </div>
        </div>
    </div>
</div>

<script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/ScriptIndex.js"></script>