@{
    ViewData["Title"] = "Disposition des Tables";
}
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/StylePageIndexAdmin.css">
</head>

<div class="container">
    <h1>DISPOSITION DU RESTAURANT</h1>

    <div class="mb-4">
        <label for="canvasSizeSelect" class="form-label">Taille du restaurant:</label>
        <select id="canvasSizeSelect" class="form-select w-auto d-inline-block">
            <option value="1">Taille par défaut</option>
            <option value="1.50">Moyen</option>
            <option value="1.90">Large</option>
        </select>
        <button id="saveCanvasButton" class="btn btn-success">Enregistrer la disposition</button>
    </div>

    <canvas id="roomCanvas" width="800" height="600"></canvas>

    <div class="controls mt-4">
        <div>
            <br />
            <label for="seatsInput" class="me-2">Nombre de personnes :</label>
            <input type="number" id="seatsInput" min="2" max="10" step="2" value="2">
        </div>

        <div class="mt-3">
            <button id="addTableButton" class="btn btn-primary">Ajouter une table</button>
            <button id="rotateTableButton" class="btn btn-secondary">Faire pivoter</button>
            <button id="deleteTableButton" class="btn btn-danger">Supprimer</button>
        </div>
        <div class="mt-3">
            <button id="modifyTableNameButton" class="btn btn-warning">Modifier le nom</button> 
            <button id="saveButton" class="btn btn-success">Enregistrer dans la DB</button>
            <a href="/AdminView/Upload" class="btn btn-secondary">Gérer Menu</a>

        </div>
    </div>
</div>

<!-- Modale pour modifier le nom de la table -->
<div class="modal fade" id="tableNameModal" tabindex="-1" aria-labelledby="tableNameModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="tableNameModalLabel">Modifier le nom de la table</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="text" id="tableNameInput" class="form-control" placeholder="Entrez le nouveau nom">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <button type="button" id="saveTableNameButton" class="btn btn-primary">Sauver</button>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/ScriptIndex.js"></script>
