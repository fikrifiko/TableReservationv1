@{
    Layout = "_LayoutAdmin"; // Utilise le layout Admin (si tu en as un)
    ViewData["Title"] = "Upload";
}


<div class="admin-content-wrapper">
    <h1>Menu du Restaurant</h1>
    <p class="admin-description">Le menu est maintenant affiché directement sur le site.</p>
    <div style="margin: 2rem 0;">
        <a href="/Home/Menu" class="btn btn-primary">
            Voir le Menu
        </a>
    </div>
    <hr class="admin-divider">
    <h3>Ancien système d'upload PDF (désactivé)</h3>
    <p class="admin-note">L'upload de PDFs n'est plus utilisé. Le menu est maintenant hard-codé avec des plats belges authentiques.</p>

        <div style="opacity: 0.5; pointer-events: none;">
            <form asp-controller="File" asp-action="UploadPdf" method="post" enctype="multipart/form-data" class="upload-form">
                @Html.AntiForgeryToken()

                <label for="file-fr" class="custom-file-upload" style="opacity: 0.5;">
                    Choisir un fichier PDF (Français) - Désactivé
                    <input type="file" name="fileFr" id="file-fr" accept="application/pdf" disabled hidden>
                </label>

                <label for="file-en" class="custom-file-upload" style="opacity: 0.5;">
                    Choisir un fichier PDF (Anglais) - Désactivé
                    <input type="file" name="fileEn" id="file-en" accept="application/pdf" disabled hidden>
                </label>

                <label for="file-nl" class="custom-file-upload" style="opacity: 0.5;">
                    Choisir un fichier PDF (Néerlandais) - Désactivé
                    <input type="file" name="fileNl" id="file-nl" accept="application/pdf" disabled hidden>
                </label>

                <button type="submit" class="upload-btn" disabled style="opacity: 0.5; cursor: not-allowed;">📤 Uploader les PDFs (Désactivé)</button>
            </form>
        </div>
</div>
<script src="/js/ScriptDisplayBloc.js"></script> @* auth check *@
<script src="/js/ScriptUpload.js"></script>
