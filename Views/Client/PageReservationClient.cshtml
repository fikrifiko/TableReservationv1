@{
    ViewData["Title"] = "Réservation Client";
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/StylePageClient.css">

</head>

<body>
    <div class="container text-center mt-4">
        <h1>Réservez votre table</h1>

        <div class="mt-3">
            <label for="selectDate" class="form-label">Choisissez une date :</label>
            <input type="date" id="selectDate" class="form-control" style="max-width: 300px; margin: 0 auto;" min="">
        </div>

        <div id="loadingMessage" class="text-muted mt-2" style="display: none;">Chargement de la salle...</div>
        <canvas id="roomCanvas" class="mt-4" style="border:1px solid black;"></canvas>
    </div>

    <div id="reservationModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeReservationModal()">&times;</span>
            <h2>Réservez la  <span id="tablename"></span></h2>
            <p>Date sélectionnée : <strong id="displayReservationDate"></strong></p>
            <label for="startTime">Heure de début :</label>
            <select id="startTime" required></select>
            <div class="mb-3">
                <label for="clientName" class="form-label">Nom :</label>
                <input type="text" id="clientName" class="form-control" placeholder="Entrez votre nom" required>
            </div>
            <div class="mb-3">
                <label for="clientEmail" class="form-label">Email :</label>
                <input type="email" id="clientEmail" class="form-control" placeholder="Entrez votre email" required>
            </div>
            <div class="mb-3">
                <label for="clientPhone" class="form-label">Téléphone :</label>
                <input type="tel" id="clientPhone" class="form-control" placeholder="Entrez votre numéro de téléphone" required>
            </div>
            <br>
            <button class="btn btn-primary" onclick="submitReservation()">Réserver</button>
            <button class="btn btn-secondary" onclick="closeReservationModal()">Annuler</button>
        </div>
    </div>

    <!-- Lien vers le fichier JavaScript -->
    <script src="~/js/ScriptsPageClient.js"></script>
</body>
