@{
    ViewData["Title"] = "Klantreservering";
}
<head>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/StylePageClient.css">
</head>

<body>
    <div id="reservationOverlay" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0, 0, 0, 0.5); z-index: 999;"></div>

    <div class="container text-center mt-4">
        <h1>Reserveer uw tafel</h1>

        <div class="mt-3">
            <label for="selectDate" class="form-label">Kies een datum:</label>
            <input type="date" id="selectDate" class="form-control" style="max-width: 300px; margin: 0 auto;" min="">
            <label for="startTime">Starttijd:</label> <br />
            <select id="startTime" sele style="max-width: 300px; margin: 0 auto;" min="">
                <option value="00:00" selected>00:00</option>
            </select>
        </div>

        <div id="loadingMessage" class="text-muted mt-2" style="display: none;">Zaal laden...</div>
        <canvas id="roomCanvas" class="mt-4" style="border:1px solid black;"></canvas>
    </div>

    <div id="reservationModal" class="modal">
        <div class="modal-content">
            <span class="close" id="reservationCloseBtn">&times;</span>
            <h2>Reserveren <span hidden id="tableId"> </span><strong id="TableNameModal"></strong></h2>
            <p>Geselecteerde datum: <strong id="displayReservationDate"></strong></p>
            <p>Geselecteerde tijd: <strong id="displayReservationHoure"></strong></p>

            <div class="mb-3">
                <label for="clientName" class="form-label">Naam:</label>
                <input type="text" id="clientName" class="form-control" placeholder="Uw naam" required>
            </div>
            <div class="mb-3">
                <label for="clientEmail" class="form-label">E‑mail:</label>
                <input type="email" id="clientEmail" class="form-control" placeholder="Uw e‑mail" required>
            </div>
            <div class="mb-3">
                <label for="clientPhone" class="form-label">Telefoon:</label>
                <input type="tel" id="clientPhone" class="form-control" placeholder="Uw telefoonnummer" required>
            </div>
            <br>
            <button class="btn btn-primary" id="reserveBtn">Reserveren</button>
            <button class="btn btn-secondary" id="cancelReserveBtn">Annuleren</button>
        </div>
    </div>

    <script src="~/js/ScriptsPageClient.js" defer></script>
</body>


