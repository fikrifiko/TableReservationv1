@{
    ViewData["Title"] = "Klantreservering";
}
<link rel="stylesheet" href="~/css/StylePageClient.css" />

<div id="reservationOverlay" class="reservation-overlay"></div>

<div class="client-reservation-container container text-center mt-4">
    <h1>Reserveer uw tafel</h1>

    <div class="mt-3">
        <label for="selectDate" class="form-label">Kies een datum:</label>
        <input type="date" id="selectDate" class="form-control client-date-input" style="max-width: 300px; margin: 0 auto;">
        <label for="startTime" class="form-label mt-3">Starttijd:</label>
        <select id="startTime" class="form-select client-time-select" style="max-width: 300px; margin: 0 auto;">
            <option value="00:00" selected>00:00</option>
        </select>
    </div>

    <div id="loadingMessage" class="text-muted mt-2" style="display: none;">Zaal laden...</div>
    <canvas id="roomCanvas" class="mt-4" style="border:1px solid black;"></canvas>
</div>

<div id="reservationModal" class="modal custom-reservation-modal" role="dialog" aria-modal="true" aria-labelledby="reservationModalTitle">
    <div class="modal-content">
        <button type="button" class="close" id="reservationCloseBtn" aria-label="Sluiten">&times;</button>
        <h2 id="reservationModalTitle">Reserveren <span hidden id="tableId"></span><strong id="TableNameModal"></strong></h2>
        <p>Geselecteerde datum: <strong id="displayReservationDate"></strong></p>
        <p>Geselecteerde tijd: <strong id="displayReservationHoure"></strong></p>

        <div class="mb-3">
            <label for="clientName" class="form-label">Naam:</label>
            <input type="text" id="clientName" class="form-control" placeholder="Uw naam" required>
        </div>
        <div class="mb-3">
            <label for="clientEmail" class="form-label">E‑mail:</label>
            <input type="email" id="clientEmail" class="form-control" placeholder="Uw e‑mail" required>
        </div>
        <div class="mb-3">
            <label for="clientPhone" class="form-label">Telefoon:</label>
            <input type="tel" id="clientPhone" class="form-control" placeholder="Uw telefoonnummer" required>
        </div>

        <div class="d-flex justify-content-end gap-2 mt-3">
            <button type="button" class="btn btn-secondary" id="cancelReserveBtn">Annuleren</button>
            <button type="button" class="btn btn-primary" id="reserveBtn">Reserveren</button>
        </div>
    </div>
</div>

<script src="~/js/ScriptsPageClient.js" defer></script>


