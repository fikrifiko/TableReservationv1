@model ReservationModel

<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reservering Bevestigd</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <style>
        body {
            margin: 30px;
            background: linear-gradient(135deg, #f3f4f6, #e3e4e8);
            font-family: 'Arial', sans-serif;
        }
        .confirmation-card {
            max-width: 500px;
            margin: 50px auto;
            padding: 20px;
            background: white;
            border-radius: 12px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }
        .confirmation-card h2 {
            color: #28a745;
            font-weight: bold;
        }
        .icon-check {
            font-size: 4rem;
            color: #28a745;
        }
        .list-group-item {
            font-size: 1.1rem;
            padding: 10px;
        }
        .btn-home {
            margin-top: 20px;
            padding: 10px 20px;
            font-size: 1.1rem;
        }
    </style>
</head>
<body>
    <div class="confirmation-card">
        <i class="bi bi-check-circle-fill icon-check"></i>
        <h2>Reservering bevestigd!</h2>
        <p class="text-muted">Bedankt, uw reservering is succesvol geregistreerd.</p>
        <p class="text-muted">Er is een bevestigingsmail naar u verzonden.</p>
        <ul class="list-group text-start">
            <li class="list-group-item"><i class="bi bi-person-fill"></i> <strong>Naam:</strong> @Model.ClientName</li>
            <li class="list-group-item"><i class="bi bi-envelope-fill"></i> <strong>Eâ€‘mail:</strong> @Model.ClientEmail</li>
            <li class="list-group-item"><i class="bi bi-telephone-fill"></i> <strong>Telefoon:</strong> @Model.ClientPhone</li>
            <li class="list-group-item"><i class="bi bi-calendar-date"></i> <strong>Datum:</strong> @Model.ReservationDate.ToString("dd/MM/yyyy")</li>
            <li class="list-group-item"><i class="bi bi-clock"></i> <strong>Tijd:</strong> @Model.ReservationHoure.ToString("HH:mm")</li>
            <li class="list-group-item"><i class="bi bi-table"></i> <strong>Tafel:</strong> @Model.TableName</li>
            <li class="list-group-item"><i class="bi bi-credit-card"></i> <strong>Bedrag:</strong> @Model.Amount euro</li>
        </ul>
        <a href="/" class="btn btn-success btn-home">Terug naar startpagina</a>
    </div>
</body>
</html>

