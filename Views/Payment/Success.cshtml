@model ReservationModel

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Réservation Confirmée</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

    <style>
        body {
            margin: 30px;
            background: linear-gradient(135deg, #f3f4f6, #e3e4e8);
            font-family: 'Arial', sans-serif;
        }

        .confirmation-card {
            max-width: 500px;
            margin: 50px auto;
            padding: 20px;
            background: white;
            border-radius: 12px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

            .confirmation-card h2 {
                color: #28a745;
                font-weight: bold;
            }

        .icon-check {
            font-size: 4rem;
            color: #28a745;
        }

        .list-group-item {
            font-size: 1.1rem;
            padding: 10px;
        }

        .btn-home {
            margin-top: 20px;
            padding: 10px 20px;
            font-size: 1.1rem;
        }
    </style>
</head>
<body>

    <div class="confirmation-card">
        <!-- Icône de confirmation -->
        <i class="bi bi-check-circle-fill icon-check"></i>

        <h2>Réservation Confirmée !</h2>
        <p class="text-muted">Merci, votre réservation a été enregistrée avec succès.</p>
        <p class="text-muted">Un email de confirmation vous a été envoyé.</p>

        <!-- Détails de la réservation -->
        <ul class="list-group text-start">
            <li class="list-group-item"><i class="bi bi-person-fill"></i> <strong>Nom :</strong> @Model.ClientName</li>
            <li class="list-group-item"><i class="bi bi-envelope-fill"></i> <strong>Email :</strong> @Model.ClientEmail</li>
            <li class="list-group-item"><i class="bi bi-telephone-fill"></i> <strong>Téléphone :</strong> @Model.ClientPhone</li>
            <li class="list-group-item"><i class="bi bi-calendar-date"></i> <strong>Date :</strong> @Model.ReservationDate.ToString("dd/MM/yyyy")</li>
            <li class="list-group-item"><i class="bi bi-clock"></i> <strong>Heure :</strong> @Model.ReservationHoure.ToString("HH:mm")</li>
            <li class="list-group-item"><i class="bi bi-table"></i> <strong>Table :</strong> @Model.TableName</li>
            <li class="list-group-item"><i class="bi bi-credit-card"></i> <strong>Montant :</strong> @Model.Amount euros</li>
        </ul>

        <!-- Bouton Retour -->
        <a href="/" class="btn btn-success btn-home">Retour à l'accueil</a>
    </div>

</body>
</html>
