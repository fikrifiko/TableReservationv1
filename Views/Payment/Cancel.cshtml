@model ReservationModel

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Annulation de Paiement</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        body {
            background-color: #fff5f5;
            font-family: 'Arial', sans-serif;
        }
        .cancel-container {
            max-width: 600px;
            margin: 80px auto;
            padding: 20px;
            background: white;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            text-align: center;
        }
        .cancel-icon {
            font-size: 60px;
            color: #e63946;
        }
        h1 {
            color: #e63946;
            font-weight: bold;
        }
        .cancel-text {
            font-size: 18px;
            margin-top: 15px;
            color: #333;
        }
        .details {
            text-align: left;
            margin-top: 20px;
        }
        .details li {
            list-style: none;
            font-size: 16px;
            margin: 10px 0;
        }
        .details i {
            color: #e63946;
            margin-right: 8px;
        }
        .btn-home {
            background-color: #e63946;
            color: white;
            padding: 10px 15px;
            border-radius: 5px;
            text-decoration: none;
            margin-top: 15px;
            display: inline-block;
            font-size: 18px;
            font-weight: bold;
        }
        .btn-home:hover {
            background-color: #c53030;
            text-decoration: none;
        }
    </style>
</head>
<body>

    <div class="cancel-container">
        <i class="fas fa-times-circle cancel-icon"></i>
        <h1>Paiement Annulé</h1>
        <p class="cancel-text">Votre transaction a été annulée. Si vous avez rencontré un problème, vous pouvez réessayer.</p>

        <ul class="details">
            <li><i class="fas fa-chair"></i> <strong>Table :</strong> @Model.TableName</li>
            <li><i class="fas fa-calendar-alt"></i> <strong>Date :</strong> @Model.ReservationDate.ToString("dd/MM/yyyy")</li>
            <li><i class="fas fa-clock"></i> <strong>Heure :</strong> @Model.ReservationHoure.ToString("HH:mm")</li>
            <li><i class="fas fa-user"></i> <strong>Nom :</strong> @Model.ClientName</li>
            <li><i class="fas fa-envelope"></i> <strong>Email :</strong> @Model.ClientEmail</li>
            <li><i class="fas fa-phone"></i> <strong>Téléphone :</strong> @Model.ClientPhone</li>
            <li><i class="fas fa-euro-sign"></i> <strong>Montant :</strong> @Model.Amount euros</li>
        </ul>

        <a href="/" class="btn-home"><i class="fas fa-arrow-left"></i> Retour à l'accueil</a>
    </div>

</body>
</html>
